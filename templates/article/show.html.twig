{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu }}</td>
            </tr>
            <tr>
                <th>Datedecreation</th>
                <td>{{ article.datedecreation ? article.datedecreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td><a href="/user/{{article.user.id}}">{{article.user.nom}}</a></td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ article.statut }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_article_index') }}">page profil</a>
    <a href="{{ path('app_profil_shearch') }}">page blog admin</a>
    {% elseif is_granted('ROLE_USER') %}
    <a href="{{ path('app_profil') }}">page profil</a>
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

        {{ include('article/_delete_form.html.twig') }}
    {% elseif article.user == app.user %}
        <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

        {{ include('article/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
